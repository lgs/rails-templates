
log 'Install Rails3 template 3.0.0.beta3 version'
  file 'http://github.com/lgs/rails-templates/raw/master/R3-base'

log 'Install Blueprint-CSS layout'
  file 'http://github.com/lgs/rails-templates/raw/master/Blueprint-CSS-layout'

log 'Generating home controller for default root'
  run 'rails g controller home index'
  inject_into_file "config/routes.rb", "\n\n  root :to => 'home#index' \n", :after => "Prova::Application.routes.draw do |map|"

  run "rm app/views/home/index.html.erb"

