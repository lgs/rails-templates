##################

puts "\nInstalling Authlogic"
file_inject 'config/environment.rb', '# config.gem "aws-s3", :lib => "aws/s3"', <<-CODE

  config.gem "authlogic"
CODE
rake 'gems:install', :sudo => true

puts "\nCreating The Model And Controller"
file 'app/models/user.rb', <<-USER
class User < ActiveRecord::Base  
  acts_as_authentic  
end  
USER
